extends layout

block content
  div.container
    h1 Login
    form(method='POST', action='/users/login')
      #form-group
        label Username:
        input.form-control.col-md-4(name='username',type='text')
      #form-group
        label Password:
        input.form-control.col-md-4(name='password',type='password')
      br
      input.btn.btn-primary(type='submit',value='Submit')
