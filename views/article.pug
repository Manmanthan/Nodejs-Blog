extends layout

block content
  div.container.mb-5
    h1= article.title
    h6 Written by #{author}
    p= article.body
    hr
    if user
      if user.id ==article.author
        a.btn.btn-primary(style="margin-right: 16px" href='/articles/edit/'+article._id) Edit 
        a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete
  
